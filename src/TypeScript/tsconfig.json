{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}